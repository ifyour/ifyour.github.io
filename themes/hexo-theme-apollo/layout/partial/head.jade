meta(charset="utf-8")
meta(name="X-UA-Compatible", content="IE=edge")
meta(name="theme-color", content="#ffffff")
meta(name="apple-mobile-web-app-capable", content="yes")
meta(name="apple-mobile-web-app-status-bar-style", content="black")
meta(name="apple-mobile-web-app-title", content="Ifyour's Blog")
meta(name="msapplication-TileImage", content="/img/webAppIcon-256x256.png")
meta(name="msapplication-TileColor", content="#000")
meta(property="algolia:search" data-application-id=config.algolia.appId data-api-key=config.algolia.apiKey data-index-name=config.algolia.indexName)

title
    block site_title
        = config.title
block description
    meta(name="description", content= config.description ? config.description : 'A Blog Powered By Hexo')

meta(name="viewport", content="width=device-width, initial-scale=1")
link(rel="manifest", href=url_for("/manifest.json"))
link(rel="icon", type="image/x-icon", href=url_for(theme.favicon))
link(rel="stylesheet", href=url_for("css/apollo.css"))
link(rel="apple-touch-icon", size="256x256", href=url_for("/img/webAppIcon-256x256.png"))
link(rel="apple-touch-icon", size="512x512", href=url_for("/img/webAppIcon-512x512.png"))
link(rel="apple-touch-startup-image", href=url_for("/img/apple-launch-750x1334.png"))
link(rel="preload", href=url_for("/css/apollo.css"), as="style")
link(rel="preload", href=url_for("/js/main.js"), as="script")

- var xml = config.url + '/atom.xml'
    link(rel="search", type="application/opensearchdescription+xml", href=xml, title=config.title)
